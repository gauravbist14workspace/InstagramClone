<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.uzumaki.naruto.instagramclone">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_app_icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_app_icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".views.activities.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".views.activities.RegisterActivity" />
        <activity android:name=".views.activities.HomeActivity" />
        <activity android:name=".views.activities.LikesActivity" />
        <activity android:name=".views.activities.SearchActivity" android:windowSoftInputMode="adjustNothing" />
        <activity android:name=".views.activities.ShareActivity" />
        <activity android:name=".views.activities.NextActivity" />
        <activity android:name=".views.activities.ProfileActivity" />
        <activity android:name=".views.activities.AccountSettingActivity" />
    </application>

</manifest>